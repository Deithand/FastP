<Window x:Class="FastP.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FastP - Fast Packer" Height="500" Width="700"
        WindowStartupLocation="CenterScreen"
        Closing="Window_Closing">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="FastP - Fast Packer" 
                   FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <TextBlock Text="Обработано сегодня: " VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBlock Text="{Binding FilesProcessedToday}" 
                           FontWeight="Bold" 
                           Foreground="Green"
                           VerticalAlignment="Center"
                           Margin="0,0,15,0"/>
                <TextBlock Text="Всего: " VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBlock Text="{Binding TotalFilesProcessed}" 
                           FontWeight="Bold" 
                           Foreground="Blue"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <Button Grid.Column="1" 
                    Content="↩ Отменить" 
                    Command="{Binding UndoCommand}" 
                    Margin="0,0,10,0" 
                    Padding="10,5"
                    MinWidth="100"/>
            
            <Button Grid.Column="2" 
                    Content="{Binding PauseButtonText}" 
                    Click="PauseResume_Click" 
                    Margin="0,0,10,0" 
                    Padding="10,5"
                    MinWidth="120"/>
            
            <Button Grid.Column="3" 
                    Content="⚙ Настройки" 
                    Click="OpenSettings_Click" 
                    Padding="10,5"
                    MinWidth="120"/>
        </Grid>

        <ListBox Grid.Row="2" 
                 ItemsSource="{Binding Logs}"
                 ScrollViewer.HorizontalScrollBarVisibility="Auto"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 FontFamily="Consolas"
                 FontSize="11"
                 Background="#F5F5F5"/>

        <StackPanel Grid.Row="3" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Перезагрузить правила" 
                    Click="ReloadRules_Click" 
                    Margin="0,0,10,0" 
                    Padding="10,5"/>
            <Button Content="Скрыть в трей" 
                    Click="HideToTray_Click" 
                    Padding="10,5"/>
        </StackPanel>
    </Grid>
</Window>

