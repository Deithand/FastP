<Window x:Class="FastP.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Настройки FastP" Height="450" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Настройки" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

        <TabControl Grid.Row="1">
            <TabItem Header="Общие">
                <StackPanel Margin="10">
                    <TextBlock Text="Папка для сортировки:" Margin="0,0,0,5"/>
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="SourcePathTextBox" IsReadOnly="True" VerticalAlignment="Center" Height="25"/>
                        <Button Grid.Column="1" Content="..." Width="30" Height="25" Margin="5,0,0,0" Click="BrowseSourcePath_Click"/>
                    </Grid>

                    <CheckBox x:Name="NotificationsCheckBox" Content="Показывать уведомления Windows" Margin="0,0,0,10"/>

                    <TextBlock Text="Минимальный размер файла (байт):" Margin="0,0,0,5"/>
                    <TextBox x:Name="MinSizeTextBox" Width="150" HorizontalAlignment="Left" PreviewTextInput="NumberValidationTextBox"/>
                    <TextBlock Text="0 = без ограничений" FontSize="10" Foreground="Gray" Margin="0,2,0,10"/>
                </StackPanel>
            </TabItem>
            <TabItem Header="Правила сортировки">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Расширение" FontWeight="Bold"/>
                        <TextBlock Grid.Column="1" Text="Папка" FontWeight="Bold"/>
                    </Grid>

                    <ListView x:Name="RulesListView" Grid.Row="1" Margin="0,0,0,5">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Расширение" Width="120" DisplayMemberBinding="{Binding Extension}"/>
                                <GridViewColumn Header="Папка" Width="200" DisplayMemberBinding="{Binding Folder}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                        <TextBox x:Name="NewExtTextBox" Width="80" Margin="0,0,5,0" ToolTip="Расширение (например .mp3)"/>
                        <TextBox x:Name="NewFolderTextBox" Width="120" Margin="0,0,5,0" ToolTip="Папка"/>
                        <Button Content="Добавить" Click="AddRule_Click" Margin="0,0,10,0" Padding="5,2"/>
                        <Button Content="Удалить выбранное" Click="RemoveRule_Click" Padding="5,2"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Сохранить" Click="Save_Click" Margin="0,0,10,0" Padding="20,5"/>
            <Button Content="Отмена" Click="Cancel_Click" Padding="20,5"/>
        </StackPanel>
    </Grid>
</Window>

